@page
@model BookingManagmint.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="alert alert-danger">
    <h4 class="alert-heading">Something went wrong.</h4>
    <p class="mb-0">We couldn't complete your request. Please try again or contact support.</p>
    @if (Model.ShowRequestId)
    {
        <div class="small text-muted mt-2">Request ID: @Model.RequestId</div>
    }
    @if (!string.IsNullOrEmpty(Model.StatusCode))
    {
        <div class="small text-muted">Status Code: @Model.StatusCode</div>
    }
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="mt-2">@Model.Message</div>
    }
}</div>


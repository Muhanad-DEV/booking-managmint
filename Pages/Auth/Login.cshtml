@page
@model BookingManagmint.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - Event Booking</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" href="/">Event Booking</a>
            </div>
        </nav>
    </header>
    <main class="container">
        <div class="row justify-content-center mt-5">
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body p-5">
                        <h2 class="text-center mb-4">Login</h2>
                        
                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger">@Model.ErrorMessage</div>
                        }
                        
                        <form method="post">
                            <div class="mb-3">
                                <strong>Username or Email</strong>
                                <input name="UsernameOrEmail" class="form-control mt-2" placeholder="Enter username or email" required />
                            </div>
                            
                            <div class="mb-3">
                                <strong>Password</strong>
                                <input name="Password" type="password" class="form-control mt-2" placeholder="Enter password" required />
                            </div>
                            
                            <button type="submit" class="btn btn-primary w-100 btn-lg mb-3">Login</button>
                            <div class="text-center">
                                <a href="/Auth/Register">Don't have an account? Register</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-muted small text-center">&copy; @DateTime.UtcNow.Year Event Booking</div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

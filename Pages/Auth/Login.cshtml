@page
@model BookingManagmint.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="Input.UsernameOrEmail" class="form-label"></label>
        <input asp-for="Input.UsernameOrEmail" class="form-control" />
        <span asp-validation-for="Input.UsernameOrEmail" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label"></label>
        <input asp-for="Input.Password" class="form-control" type="password" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
    <a class="btn btn-link" href="/Auth/Register">Register</a>
</form>

<partial name="_ValidationScriptsPartial" />


@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Http
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event Booking</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container">
                <a class="navbar-brand" asp-page="/Index">Event Booking</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item"><a class="nav-link" asp-page="/Index">Events</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Dashboard/Index">Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-page="/Organizer/Events">Organizer</a></li>
                        @{
                            var userName = Context.Session.GetString("UserName");
                            var userEmail = Context.Session.GetString("UserEmail");
                        }
                        @if (!string.IsNullOrEmpty(userName))
                        {
                            <li class="nav-item">
                                <span class="navbar-text text-white me-2">@userName (@userEmail)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Logout">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-page="/Auth/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main class="container py-4">
        @RenderBody()
    </main>
    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-muted small">&copy; @DateTime.UtcNow.Year Event Booking</div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- React build (Vite) will emit into /wwwroot/dist; load if present -->
    <script type="module" src="/dist/assets/index.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


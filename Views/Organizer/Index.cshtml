@model EventSearchViewModel
@{
    ViewData["Title"] = "Manage Events";
}

<h2>Manage Events</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">Create New Event</a>
</div>

<div class="row mb-4">
    <div class="col-md-12">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <input type="text" name="searchQuery" class="form-control" placeholder="Search events..." value="@Model.SearchQuery" />
            </div>
            <div class="col-md-4">
                <select name="category" class="form-select">
                    <option value="">All Categories</option>
                    @foreach (var cat in ViewBag.Categories as List<string> ?? new List<string>())
                    {
                        <option value="@cat" selected="@(Model.Category == cat)">@cat</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary w-100">Search</button>
            </div>
        </form>
    </div>
</div>

@if (Model.Events.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Category</th>
                    <th>Date & Time</th>
                    <th>Venue</th>
                    <th>Capacity</th>
                    <th>Remaining</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var eventItem in Model.Events)
                {
                    <tr>
                        <td>@eventItem.Title</td>
                        <td>@eventItem.Category</td>
                        <td>@eventItem.DateTime.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>@eventItem.Venue</td>
                        <td>@eventItem.Capacity</td>
                        <td>@eventItem.RemainingSeats</td>
                        <td>$@eventItem.Price.ToString("F2")</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@eventItem.EventId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>No events found. <a asp-action="Create">Create your first event</a>.</p>
    </div>
}



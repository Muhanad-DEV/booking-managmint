@model EventViewModel
@{
    ViewData["Title"] = "Delete Event";
}

<h2>Delete Event</h2>

<div class="row">
    <div class="col-md-8">
        <div class="alert alert-danger">
            <strong>Warning!</strong> Are you sure you want to delete this event?
            @if (ViewBag.TicketCount > 0)
            {
                <p class="mb-0 mt-2">This event has @ViewBag.TicketCount ticket(s) associated with it. Deleting will remove all associated tickets.</p>
            }
        </div>

        <div class="card mb-3">
            <div class="card-header">
                <h5>Event Details</h5>
            </div>
            <div class="card-body">
                <p><strong>Title:</strong> @Model.Title</p>
                <p><strong>Description:</strong> @Model.Description</p>
                <p><strong>Date & Time:</strong> @Model.DateTime.ToString("MMM dd, yyyy HH:mm")</p>
                <p><strong>Venue:</strong> @Model.Venue</p>
                <p><strong>Category:</strong> @Model.Category</p>
                <p><strong>Capacity:</strong> @Model.Capacity</p>
                <p><strong>Remaining Seats:</strong> @Model.RemainingSeats</p>
                <p><strong>Price:</strong> $@Model.Price.ToString("F2")</p>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="EventId" />
            <div class="mb-3">
                <button type="submit" class="btn btn-danger">Yes, Delete Event</button>
                <a asp-action="Index" class="btn btn-secondary">No, Go Back</a>
            </div>
        </form>
    </div>
</div>



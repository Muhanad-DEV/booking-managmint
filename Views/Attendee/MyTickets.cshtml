@model List<TicketViewModel>
@{
    ViewData["Title"] = "My Tickets";
}

<h2>My Tickets</h2>

@if (Model.Any())
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Event</th>
                    <th>Date & Time</th>
                    <th>Venue</th>
                    <th>Status</th>
                    <th>QR Code</th>
                    <th>Purchased</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var ticket in Model)
                {
                    <tr>
                        <td>@ticket.TicketId.ToString().Substring(0, 8)...</td>
                        <td>@ticket.EventTitle</td>
                        <td>@ticket.EventDateTime.ToString("MMM dd, yyyy HH:mm")</td>
                        <td>@ticket.EventVenue</td>
                        <td>
                            <span class="badge @(ticket.Status == TicketStatus.Paid ? "bg-success" : 
                                                ticket.Status == TicketStatus.Cancelled ? "bg-danger" : 
                                                ticket.Status == TicketStatus.CheckedIn ? "bg-info" : "bg-warning")">
                                @ticket.Status
                            </span>
                        </td>
                        <td>@ticket.QRCode</td>
                        <td>@ticket.PurchasedAt.ToString("MMM dd, yyyy")</td>
                        <td>
                            @if (ticket.Status != TicketStatus.Cancelled)
                            {
                                <a asp-action="CancelTicket" asp-route-id="@ticket.TicketId" class="btn btn-sm btn-danger">Cancel</a>
                            }
                            else
                            {
                                <span class="text-muted">Cancelled</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="alert alert-info">
        <p>You don't have any tickets yet. <a asp-action="Index">Browse events</a> to book tickets.</p>
    </div>
}


